{
    "manifest_version": 2,
    "name": "Hack Pad",
    "author": "Jatin Varlyani <varlyanijatin88@gmail.com>",
    "description": "Note keeping extension similar to sticky notes.",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": { 
            "16": "images/hackpad-icon.png"
        },
        "default_title": "Hack Pad",
        "default_popup": "pages/popup.html"
    },
    "permissions": [
        "storage"
    ],
    "version": "1.0"

}